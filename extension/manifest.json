{
  "manifest_version": 2,
  "name": "Pushpin",
  "description": "Keep your favorite pinned tabs around.",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "page": "page-background.html",
    "persistent": false
  },
  "options_page": "page-options.html",
  "options_ui": {
    "page": "page-options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "Pushpin"
  },
  "icons": {
    "24": "img/icon24.png",
    "48": "img/icon48.png"
  }
}
